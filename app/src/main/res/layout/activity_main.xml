<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/no1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="29dp"
        android:text="@string/num1"
        app:layout_constraintEnd_toStartOf="@+id/inputNo1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="31dp"
        android:text="@string/num2"
        app:layout_constraintEnd_toStartOf="@+id/inputNo2"
        app:layout_constraintTop_toBottomOf="@+id/inputNo1" />

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="61dp"
        android:text="@string/okBtn"
        app:layout_constraintStart_toStartOf="@+id/no2"
        app:layout_constraintTop_toBottomOf="@+id/inputNo2" />

    <EditText
        android:id="@+id/inputNo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/no1"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputNo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/no2"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>